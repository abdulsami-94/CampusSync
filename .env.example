# Environment Configuration for CampusSync
# Copy this to .env and fill in your values

# Security
SECRET_KEY=your-super-secret-key-here

# Database
DATABASE_URL=postgresql://username:password@localhost/campussync
# Or for SQLite: DATABASE_URL=sqlite:///instance/campussync.db

# Redis (for rate limiting)
REDIS_URL=redis://localhost:6379/0

# Sentry (optional)
SENTRY_DSN=https://your-sentry-dsn-here

# Flask Environment
FLASK_ENV=development